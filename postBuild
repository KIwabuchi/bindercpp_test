cd /tmp && git clone --recursive https://github.com/LLNL/metall.git
cd /tmp && wget -q --no-check-certificate https://dl.bintray.com/boostorg/release/1.75.0/source/boost_1_75_0.tar.gz && tar xvf boost_1_75_0.tar.gz
cd /tmp/metall && mkdir build && cd build && cmake .. -DBOOST_ROOT=/tmp/boost_1_75_0 -DCMAKE_C_COMPILER=gcc-8 -DCMAKE_CXX_COMPILER=g++-8 && make -j
